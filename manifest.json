{
  "manifest_version": 3,
  "name": "Phishing Detector",
  "version": "2.0",
  "description": "AI-powered phishing detection with email header analysis (DKIM, SPF, DMARC)",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Detector"
  }
}
